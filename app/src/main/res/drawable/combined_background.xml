<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First layer: Solid background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6200ED" /> <!-- Solid background color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to control the corner roundness -->
        </shape>
    </item>

    <!-- Second layer: Custom rounded background -->
    <item android:drawable="@drawable/rounded_background" />
</layer-list>